<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.outcome.TypeFragment">

    <View
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rect_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_health"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/teal_400"
                android:text="Healthcare"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_fnb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Food and Drink"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_health"
                app:layout_constraintStart_toStartOf="@+id/btn_health"
                app:layout_constraintTop_toBottomOf="@+id/btn_health" />

            <Button
                android:id="@+id/btn_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Transportation"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_fnb"
                app:layout_constraintStart_toStartOf="@+id/btn_fnb"
                app:layout_constraintTop_toBottomOf="@+id/btn_fnb" />

            <Button
                android:id="@+id/btn_eew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Electronic, Electrician, and Water"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_transport"
                app:layout_constraintStart_toStartOf="@+id/btn_transport"
                app:layout_constraintTop_toBottomOf="@+id/btn_transport" />

            <Button
                android:id="@+id/btn_laundry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Laundry and Clean"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_eew"
                app:layout_constraintStart_toStartOf="@+id/btn_eew"
                app:layout_constraintTop_toBottomOf="@+id/btn_eew" />

            <Button
                android:id="@+id/btn_enter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Entertainment"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_laundry"
                app:layout_constraintStart_toStartOf="@+id/btn_laundry"
                app:layout_constraintTop_toBottomOf="@+id/btn_laundry" />

            <Button
                android:id="@+id/btn_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_400"
                android:text="Other"
                android:textColor="@color/white_2"
                app:layout_constraintEnd_toEndOf="@+id/btn_enter"
                app:layout_constraintStart_toStartOf="@+id/btn_enter"
                app:layout_constraintTop_toBottomOf="@+id/btn_enter" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>